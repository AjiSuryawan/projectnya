<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
    
    <LinearLayout
            android:id="@+id/profile_reload_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">
        
        <TextView
                android:id="@+id/profile_failure"
                style="@style/TextAppearance.AppCompat.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Terjadi kesalahan"/>
        
        <Button
                android:id="@+id/reload_btn"
                style="@style/TextAppearance.AppCompat.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:text="Segarkan"
                android:textAllCaps="false"
                android:textColor="@color/colorPrimary"/>
    </LinearLayout>
    
    <LinearLayout
            android:id="@+id/profile_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="vertical">
        
        <android.support.design.widget.AppBarLayout
                android:id="@+id/app_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#10a49b"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:theme="@style/AppTheme.AppBarOverlay">
            
            <FrameLayout
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:layout_gravity="center_horizontal">
                
                <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    
                    <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/profileimg"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center|center_horizontal"
                            android:src="@mipmap/ic_launcher_round"/>
                </FrameLayout>
                
                <ImageView
                        android:id="@+id/verifikasiIcon"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="right|bottom"
                        android:visibility="gone"
                        app:srcCompat="@mipmap/ic_launcher"/>
            
            </FrameLayout>
            <TextView
                    android:id="@+id/profileName"
                    style="@style/TextAppearance.AppCompat.Medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:text="Nama Agent"
                    android:textColor="@android:color/white"/>
            
            <TextView
                    android:id="@+id/profileUsername"
                    style="@android:style/TextAppearance.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Info Agent"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"/>
            
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:orientation="horizontal">
            
            </LinearLayout>
        
        </android.support.design.widget.AppBarLayout>
        
        <android.support.v4.widget.NestedScrollView
                android:id="@+id/nestedScrollView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/app_bar"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">
            
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:translationZ="0dp">
                
                <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        app:cardBackgroundColor="@android:color/white"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="3dp">
                    
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:translationY="0dp"
                            android:padding="5dp">
                        
                        <TextView
                                android:id="@+id/quote"
                                style="@style/TextAppearance.AppCompat.Small"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentTop="true"
                                android:layout_margin="10dp"
                                android:text="No. Telephone"
                                android:textColor="@color/ungu"
                                android:textStyle="bold"/>
                        
                        <TextView
                                android:id="@+id/telpuser"
                                style="@style/TextAppearance.AppCompat.Small"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="10dp"
                                android:textColor="@color/ungu"/>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
                
                <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="3dp"
                        app:contentPadding="30dp">
    
    
                    <Button
                        android:id="@+id/btnhistory"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:text="Info Data Sinkron"
                        android:textColor="@color/ungu"
                        android:textStyle="bold"/>
                  
                   
                </android.support.v7.widget.CardView>
                
                <android.support.v7.widget.CardView
                        android:id="@+id/card_logout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        app:cardBackgroundColor="@android:color/white"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="3dp"
                        app:contentPadding="5dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?selectableItemBackground">
                    
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                    >
                        
                        <ImageView
                            android:src="@mipmap/ic_launcher_round"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_margin="10dp"/>
                        <TextView
                                android:id="@+id/tvlogout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="Log out"
                                android:textSize="17sp"
                                android:textStyle="bold"
                                android:textColor="@color/ungu"/>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
    </LinearLayout>
</LinearLayout>